{
    "name": "phpfui/html-unit-tester",
    "description": "PHPUnit Testing extensions for HMTL and CSS insures valid HTML and CSS via v.Nu validator",
    "minimum-stability": "stable",
    "keywords": ["PHPUnit","html","css","unit","test","testing","validation"],
    "homepage": "https://github.com/phpfui/HTMLUnitTester",
    "license": "MIT",
    "authors": [
        {
            "name": "Bruce Wells",
            "email": "brucekwells@gmail.com"
        }
    ],
    "require": {
        "php": ">=7.4 <8.2",
        "rexxars/html-validator": ">=2.2"
    },
		"config": {
				"platform": {
						"php": "7.4"
				}
		},
    "require-dev": {
        "phpunit/phpunit": "^7.0 | <10.0",
        "phpfui/phpunit-syntax-coverage": ">=1.0",
        "roave/security-advisories": "dev-latest",
        "friendsofphp/php-cs-fixer": "^3.2",
        "phpstan/phpstan": "^1.8"
    },
    "autoload": {
        "psr-4": {"PHPFUI\\HTMLUnitTester\\": "src/PHPFUI/HTMLUnitTester/"}
    }
}
